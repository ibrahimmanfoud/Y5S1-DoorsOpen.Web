@model DoorsOpen.Models.BuildingImageViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>BuildingImageModel</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BuildingId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BuildingId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImageURL)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ImageURL)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AltText)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AltText)
        </dd>
    </dl>

    <div class="fileinput fileinput-new" data-provides="fileinput">
        <div class="fileinput-new thumbnail" style="width: 200px; height: 200px;">
            @{ string image_src = Model.ImageURL; }
            @if (Model != null && Model.ImageURL != null)
            {
                <img src="@image_src" class="photo" id="imageUrl" alt="..." /> }
            else
            {
                <img src="/content/img/400x400.png" class="photo" id="imageUrl" alt="...">}
        </div>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index">Back to List</a>
        </form>
    </div>
